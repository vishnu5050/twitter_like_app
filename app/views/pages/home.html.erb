<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Your Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the WBApp</h1>

  
    
    <p>Waiting for your feedback!</p>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <h6>Are you a existing user please <%= link_to "click here to Login" , login_path  %> </h6>
</div>
<% end %>